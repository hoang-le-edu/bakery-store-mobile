<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- HEADER (chiếm 1/3 màn hình) -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/header_cake"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.33" />

    <!-- FORM (chiếm 2/3 màn hình) -->
    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.66"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerImage"
        app:layout_constraintVertical_bias="0.0">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/get_your_cakes_with_bepmetay"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Gmail -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/gmail"
            android:inputType="textEmailAddress"
            android:paddingVertical="12dp" />

        <!-- Mật khẩu -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/mat_khau"
            android:inputType="textPassword"
            android:paddingVertical="12dp" />

        <TextView
            android:id="@+id/forgotPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="16dp"
            android:text="@string/quen_mat_khau"
            android:textColor="@color/c_4a66ac"
            android:textStyle="bold" />

        <!-- Nút Đăng nhập -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/DB5560"
            android:text="@string/dang_nhap"
            android:textColor="@color/c_fcfcfc"
            app:cornerRadius="50dp" />

        <!-- Hoặc -->
        <TextView
            android:id="@+id/orText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/hoac"
            android:textAlignment="center"
            android:textColor="@color/c_262626" />

        <!-- Google -->
        <Button
            android:id="@+id/googleSignInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:text="@string/tiep_tuc_voi_google"
            android:textColor="@color/black"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_google"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@null"
            app:strokeColor="@color/c_262626"
            app:strokeWidth="1dp" />

        <!-- Tạo tài khoản -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/DB5560"
            android:text="@string/tao_tai_khoan"
            android:textColor="@color/c_fcfcfc"
            app:cornerRadius="50dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
