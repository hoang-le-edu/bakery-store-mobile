<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- HEADER (chiếm 1/3 màn hình) -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/header_cake"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.33" />

    <!-- FORM (chiếm 2/3 màn hình) -->
    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.66">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_your_cakes_with_bepmetay"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Gmail -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gmail"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_background"
            android:paddingVertical="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Mật khẩu -->
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:paddingVertical="12dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="16dp" />

        <!-- Nút Đăng nhập -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="@string/dang_nhap"
            android:backgroundTint="@color/c_4a66ac"
            android:textColor="@color/c_fcfcfc"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- Hoặc -->
        <TextView
            android:id="@+id/orText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoặc"
            android:textAlignment="center"
            android:textColor="@color/c_262626"
            android:layout_marginBottom="10dp" />

        <!-- Google -->
        <Button
            android:id="@+id/googleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiếp tục với Google"
            android:backgroundTint="@color/c_5383ec"
            android:textColor="@color/c_fcfcfc"
            android:drawableStart="@drawable/ic_google"
            android:layout_marginBottom="10dp" />

        <!-- Tạo tài khoản -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo tài khoản"
            android:backgroundTint="@color/c_4a66ac"
            android:textColor="@color/c_fcfcfc" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
