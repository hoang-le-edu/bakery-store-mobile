<!-- res/layout/item_product.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_sm"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="3dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="false"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rau câu mẫu"
            android:textSize="@dimen/text_md"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingStart="@dimen/space_sm"
            android:paddingEnd="@dimen/space_sm"
            android:paddingTop="6dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Giá + Nút cộng -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space_sm"
            android:paddingTop="@dimen/space_xs">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.000đ"
                android:textSize="@dimen/text_sm"
                android:textColor="#DB5560"
                android:layout_gravity="start|center_vertical"
                android:paddingStart="@dimen/space_sm" />

            <ImageButton
                android:id="@+id/btnAdd"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:minHeight="0dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="@dimen/space_sm"
                android:layout_marginBottom="@dimen/space_xs"
                android:src="@drawable/bg_add_button"
                android:background="@null" />
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
