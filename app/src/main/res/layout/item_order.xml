<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Order Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng #123"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    tools:text="Đơn hàng #12345" />

                <TextView
                    android:id="@+id/txtOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/11/2024 14:30"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp"
                    tools:text="15/11/2024 14:30" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chờ duyệt"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_status_pending"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                tools:text="Chờ duyệt" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp" />

        <!-- Receiver Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person"
                android:contentDescription="Person"
                app:tint="#757575" />

            <TextView
                android:id="@+id/txtReceiverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textSize="14sp"
                android:textColor="#212121"
                android:layout_marginStart="8dp"
                tools:text="Nguyễn Văn A" />

            <TextView
                android:id="@+id/txtReceiverPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0123456789"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginStart="8dp"
                tools:text="• 0123456789" />

        </LinearLayout>

        <!-- Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"
            android:paddingBottom="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                android:contentDescription="Location"
                app:tint="#757575"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="123 Nguyễn Huệ, Quận 1, TP.HCM"
                android:textSize="13sp"
                android:textColor="#757575"
                android:layout_marginStart="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="123 Nguyễn Huệ, Quận 1, TP. Hồ Chí Minh" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp" />

        <!-- Order Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_payment"
                    android:contentDescription="Payment"
                    app:tint="#757575" />

                <TextView
                    android:id="@+id/txtPaymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COD"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginStart="6dp"
                    tools:text="COD" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng:"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txtTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150,000₫"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/pink_primary"
                tools:text="150,000₫" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
