<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_xl"
    android:fitsSystemWindows="true"
    tools:context=".activity.ResetPasswordActivity">

    <TextView
        android:id="@+id/resetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Set New Password"
        android:textSize="@dimen/text_subsubtitle"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/space_xxl"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="New password (at least 6 characters)"
        android:inputType="textPassword"
        android:paddingVertical="@dimen/space_md"
        android:layout_marginTop="@dimen/space_xl"
        app:layout_constraintTop_toBottomOf="@id/resetTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Confirm new password"
        android:inputType="textPassword"
        android:paddingVertical="@dimen/space_md"
        android:layout_marginTop="@dimen/space_lg"
        app:layout_constraintTop_toBottomOf="@id/newPasswordEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/confirmResetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password Change"
        android:backgroundTint="@color/colorRedButton"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/space_xxl"
        app:layout_constraintCircleRadius="80dp"
        app:layout_constraintTop_toBottomOf="@id/confirmPasswordEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>